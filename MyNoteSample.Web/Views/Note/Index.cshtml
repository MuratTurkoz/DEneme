@model IEnumerable<MyNoteSample.Entities.Note>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-10 offset-1">
    <h2>Index</h2>

    <p>
        @MyBootstrap.LinkButton("/Note/Create", "outline-primary", string.Empty, "btn", "Yeni", "plus", "Yeni")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDraft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LikeCount)
                </td>

                <td class="d-inline-flex">
                    <button class="btn btn-outline-info btn-sm mr-1" data-note-id="@item.Id" data-toggle="modal" data-target="#modal_comment">
                        <i class="fa fa-comment "></i>
                    </button>
                    @MyBootstrap.LinkButton("/Note/Edit/" + item.Id, "outline-success", string.Empty, "btn-sm ", "Düzenle", "edit", string.Empty)
                    @MyBootstrap.LinkButton("/Note/Details/" + item.Id, "outline-warning", string.Empty, "btn-sm ", "Detay", "info-circle", string.Empty)
                    @MyBootstrap.LinkButton("/Note/Delete/" + item.Id, "outline-danger", string.Empty, "btn-sm", "Sil", "trash-restore", string.Empty)

                </td>
            </tr>
        }

    </table>
</div>

<!-- Modal -->
@MyBootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")
<script src="~/Scripts/CommentJS.js"></script>