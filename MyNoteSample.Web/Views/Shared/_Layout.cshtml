@using MyNoteSample.Entities
@using MyNoteSample.Web.Models
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Homepage - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    <!-- Custom styles for this template -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- Fontaw styles for this template -->
    @*<link href="~/Content/font-awesome.min.css" rel="stylesheet" />*@
    @*<link href="~/Content/all.min.css" rel="stylesheet" />*@

    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/all.min.js"></script>

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">MyNoteSample</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    @if (CurrentSession.user != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/Note/MyNotes" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-wrench"> </i>
                                Yönetim Paneli
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Note/Index"><i class="fa fa-th-list mr-1"></i>Notlar</a>
                                <a class="dropdown-item" href="/Note/MyLikedNotes"><i class="fa fa-heart mr-1"></i>Beğendiklerim</a>
                                <a class="dropdown-item" href="/Note/Create"><i class="fa fa-plus-circle mr-1"></i>Not Ekle</a>
                                @if (CurrentSession.user.IsAdmin)
                                {
                                    <div class="dropdown-divider"></div>

                                    <a class="dropdown-item" href="/Category/Create"><i class="fa fa-plus-circle mr-1"></i>Kategori Ekle</a>
                                    <a class="dropdown-item" href="/Category/Index"><i class="fa fa-th-list mr-1"></i>Kategoriler</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/NoteUser/Create"><i class="fa fa-plus-circle mr-1"></i>Kullanıcı Ekle</a>
                                    <a class="dropdown-item" href="/NoteUser/Index"><i class="fa fa-th-list mr-1"></i>Kullanıcılar</a>
                                }
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MostLiked", "Home")">
                            <i class="fa fa-heart"> </i>
                            En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("LastNotes", "Home")">
                            <i class="fa fa-list-ul"> </i>
                            Son Yazılanlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <i class="fa fa-info-circle"> </i>
                            Hakkımızda
                        </a>
                    </li>
                    @if (CurrentSession.user == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Home")">
                                <i class="fa fa-user-plus"> </i>
                                Üye Ol
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">
                                <i class="fa fa-sign-in-alt"> </i>
                                Giriş Yap
                            </a>
                        </li>
                    }

                    @if (CurrentSession.user != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="@Url.Action("ShowProfile", "Home")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle"></i>
                                @CurrentSession.user.UserName
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("ShowProfile","Home")">
                                    <i class="fa fa-user-check mr-1"></i>Profili Göster
                                </a>
                                <a class="dropdown-item" href="@Url.Action("EditProfile","Home")">
                                    <i class="fa fa-user-edit mr-1"></i>Düzenle
                                </a>
                                <a class="dropdown-item" href="@Url.Action("RemoveProfile","Home")" onclick="return confirm('Are you sure remove this account?');">
                                    <i class="fa fa-trash-alt mr-1"></i>Profili Sil
                                </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Home")">
                                <i class="fa fa-sign-out-alt"> </i>
                                Çıkış yap
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->
    <!-- Footer -->
    @RenderSection("footer", required: false)


</body>

</html>
