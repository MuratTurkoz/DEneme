@model MyNoteSample.Entities.ValueObject.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/login-register.css" rel="stylesheet" />
<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center min-vh-100">
        <div class="col-md-4 py-6 py-md-0">
            <div>
                <div class="text-center">
                    <h3>Login</h3>
                    <p class="small text-muted">
                        Sign in to your account to continue.
                    </p>
                </div>
                <div class="clearfix"></div>
                @Html.ValidationSummary(false)
                @if (ViewBag.SetLink != null)
                {
                    <a href="@ViewBag.SetLink" class="btn btn-outline-primary">Activate</a>
                }
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label class="text-muted form-control-label" for="inlineFormInputGroupUsername">User Name:</label>
                        <label class="sr-only" for="inlineFormInputGroupUsername">Username</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-user-circle"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", id = "inlineFormInputGroupUsername", placeholder = "Username" })
                            @*<input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Username">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="text-muted form-control-label" for="GroupPassword">Password:</label>
                        <label class="sr-only" for="GroupPassword">Password</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", id = "GroupPassword", placeholder = "Password", type = "password" })

                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-block btn-primary">Sign in</button>
                        </div>
                        @*<div class="py-3 text-center">
            <span class="text-xs text-uppercase">or</span>
        </div>*@

                        <div class="mt-1 text-right">
                            <small>Üye Değil misin?</small>
                            <a href="/Home/Register" class="small font-weight-bold">Üye Ol</a>
                        </div>
                        <div class="mt-1 text-right">
                            <small>Şifreni mi Unuttun?</small>
                            <a href="/Home/Register" class="small font-weight-bold">Yeni Şifre</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


